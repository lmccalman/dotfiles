[core]
    pager = delta

[delta]
    side-by-side = true
    syntax-theme = gruvbox

[interactive]
    diffFilter = delta --color-only

[diff]
  tool = meld
	algorithm = patience

[merge]
	tool = meld
  conflictstyle = diff3

[push]
	default = simple

[github]
	user = lmccalman

[alias]
	pmerge = merge -X patience --
[pull]
	rebase = false
